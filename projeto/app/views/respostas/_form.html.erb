<%= form.fields_for :respostas do |rf| %>
	<div class="field">
		<%= rf.label :texto,'Texto:' %>
		<%= rf.text_field :texto %>
	</div>

	<% unless rf.object.nil? || rf.object.new_record? %>
		<div class="field">
			<%= rf.label :_destroy, 'Remove:' %>
			<%= rf.check_box :_destroy %>
		</div>
	<% end %>
<% end %>
